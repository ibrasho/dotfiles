DEFAULT_USER="ibrasho"

ZSH_THEME="powerlevel10k/powerlevel10k"

POWERLEVEL10K_MODE='nerdfont-fontconfig'
POWERLEVEL10K_ALWAYS_SHOW_CONTEXT=false

POWERLEVEL10K_PROMPT_ON_NEWLINE=true
POWERLEVEL10K_MULTILINE_FIRST_PROMPT_PREFIX=""
POWERLEVEL10K_PROMPT_ADD_NEWLINE=true

zsh_wifi_signal() {
    local signal=$(/System/Library/PrivateFrameworks/Apple80211.framework/Versions/Current/Resources/airport -I | grep agrCtlRSSI | sed 's/     agrCtlRSSI: //')
    local color='%F{red}'
    [[ $signal -lt -50 ]] && color='%F{yellow}'
    [[ $signal -lt -75 ]] && color='%F{green}'
    echo -n "%{$color%}%F{black}$signal \uf012%{%f%}"
}

POWERLEVEL10K_CUSTOM_WIFI_SIGNAL="zsh_wifi_signal"

POWERLEVEL10K_LEFT_PROMPT_ELEMENTS=(context dir_writable dir vcs)
POWERLEVEL10K_RIGHT_PROMPT_ELEMENTS=(status custom_wifi_signal background_jobs battery time)

POWERLEVEL10K_DIR_DEFAULT_BACKGROUND='12'
POWERLEVEL10K_DIR_HOME_BACKGROUND='12'
POWERLEVEL10K_DIR_HOME_SUBFOLDER_BACKGROUND='12'
